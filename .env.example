# Supabase (required for real login + cloud sync)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Optional: set to 1 to disable Supabase and use local-only mode
VITE_DISABLE_SUPABASE=0

# Optional: set to 1 to persist Supabase sessions across reloads
# Default is 0 (safer for shared computers: always starts at login)
VITE_SUPABASE_PERSIST_SESSION=0

# Optional: set to 0 to hide/disable the signup UI (recommended for production)
VITE_ALLOW_SIGNUP=1

# Optional: local-only login fallback when Supabase is not configured.
# WARNING: insecure; anyone can "log in" with any email/password.
VITE_ALLOW_LOCAL_AUTH=0

# 1 = log Supabase RPC errors to the browser console (debugging)
VITE_DEBUG_SUPABASE=0
